              "path": ["users", "search", "freelancers"],
              "query": [
                {
                  "key": "query",
                  "value": "photography"
                },
                {
                  "key": "cityIds",
                  "value": "1,2"
                },
                {
                  "key": "eventTypeId",
                  "value": "4"
                }
              ]
            }
          }
        }
      ]
